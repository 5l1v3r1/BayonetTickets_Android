<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="Employee Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameText" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:id="@+id/space4" />
    <TextView
        android:text="Primary Location"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/space1" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="47.0dp"
        android:id="@+id/linearLayout3">
        <CheckBox
            android:text="Hudson"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/hudsonCheckBox" />
        <CheckBox
            android:text="Tampa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tampaCheckBox" />
        <CheckBox
            android:text="Orlando"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/orlandoCheckBox" />
    </LinearLayout>
    <TextView
        android:text="Device Type"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="54.5dp"
        android:id="@+id/linearLayout2">
        <CheckBox
            android:text="Android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/androidCheckBox" />
        <CheckBox
            android:text="Apple"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/appleCheckBox" />
    </LinearLayout>

    <TextView
        android:text="Describe your problem"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:id="@+id/issueText"
        android:layout_marginBottom="0.0dp" />
    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="33.0dp"
        android:id="@+id/space5"
        android:layout_marginTop="2.0dp"
        android:layout_marginBottom="0.0dp" />
    <Button
        android:text="Call IT Department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callButton" />
    <Button
        android:text="Call Mechanic Shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mechanicButton" />
    <Button
        android:text="Call Safety Coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/safetyButton" />
</LinearLayout>